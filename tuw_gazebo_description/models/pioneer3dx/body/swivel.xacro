<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="pioneer_swivel" params="name parent xyz rpy model_dir:=^ **contact_data">   
  
  <!-- Swivel -->
  <joint name="${name}_joint" type="continuous">
    <origin xyz="${xyz}" rpy="${rpy}"/>
    <axis xyz="0 0 1"/>
    <anchor xyz="0 0 0"/>
    <!--limit effort="100" velocity="100" k_velocity="0"/-->
    <joint_properties damping="0.1" friction="0.0"/>
    <parent link="${parent}"/>
    <child link="${name}"/>
  </joint>
  <link name="${name}">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${model_dir}/meshes/swivel.stl"/>
      </geometry>
      <material name="swivel">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="${name}">
    <material value="Gazebo/Grey"/>
  </gazebo>
  
  <!-- Center Wheel -->
  <joint name="${name}_wheel_joint" type="continuous">
    <origin xyz="-0.026 0 -0.016" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <!--limit effort="100" velocity="100" k_velocity="0"/-->
    <joint_properties damping="0.0" friction="0.0"/>
    <parent link="${name}"/>
    <child link="${name}_wheel"/>
  </joint>
  <link name="${name}_wheel">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.012411765597" ixy="-0.000711733678" ixz="0.00050272983" iyy="0.015218160428" iyz="-0.000004273467" izz="0.011763977943"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>

      <geometry>
        <mesh filename="file://${model_dir}/meshes/center_wheel.stl"/>
      </geometry>
      <material name="WheelBlack">
        <color rgba="0.117 0.117 0.117 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${-3.1415927/2.0} 0 0"/>
      <geometry>
        <!--<mesh filename="meshes/center_wheel.stl"/>-->
        <cylinder radius="0.0375" length="0.001"/> <!--radius="0.0375"-->
      </geometry>
    </collision>
  </link>
  <gazebo reference="${name}_wheel">
    <material value="Gazebo/Black"/>
    <xacro:insert_block name="contact_data"/>
  </gazebo>
    
  <!-- Center Hubcap -->
  <joint name="${name}_hubcap_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${name}_wheel"/>
    <child link="${name}_hubcap"/>
  </joint>
  <link name="${name}_hubcap">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.012411765597" ixy="-0.000711733678" ixz="0.00050272983" iyy="0.015218160428" iyz="-0.000004273467" izz="0.011763977943"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${model_dir}/meshes/center_hubcap.stl"/>
      </geometry>
      <material name="swivel">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>   
  <gazebo reference="${name}_hubcap">
    <material value="Gazebo/Grey"/>
    <xacro:insert_block name="contact_data"/>
  </gazebo>
  
  </xacro:macro>

</robot>
